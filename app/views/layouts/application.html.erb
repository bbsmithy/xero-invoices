<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<script>
  // Assuming you have a <select> element with id="clientDropdown"
  const dropdown = document.getElementById("clientDropdown");

  dropdown.addEventListener("change", function() {
    const selectedOption = this.options[this.selectedIndex];
    const clientName = selectedOption.value;

    // Get the current URL
    let url = window.location.href;
    
    // Check if the 'clients' parameter already exists in the URL
    if (url.includes("?clients=")) {
      // Extract the current value of the 'clients' parameter
      const params = new URLSearchParams(window.location.search);
      let clientsParamValue = params.get("clients");

      // Append the client name to the existing 'clients' parameter
      clientsParamValue += `,${clientName}`;

      // Update the 'clients' parameter in the URL
      url = url.replace(/(clients=)([^&]*)/, `$1${clientsParamValue}`);
    } else {
      // Add the 'clients' parameter to the URL
      url += `?clients=${clientName}`;
    }
    
    // Update the browser URL without reloading the page
    history.pushState({ path: url }, '', url);
  });
</script>

</html>
